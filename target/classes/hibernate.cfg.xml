<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
   
      <property name = "dialect">
         org.hibernate.dialect.PostgreSQLDialect
      </property>
      
      <property name = "connection.driver_class">
         org.postgresql.Driver
      </property>
      
      <property name = "connection.url">
         jdbc:postgresql://localhost:5432/EmployeeVolunteer
      </property>
      
      <property name = "connection.username">
         postgres
      </property>
      
      <property name = "connection.password">
         root
      </property>
      
      <property name="hbm2ddl.auto">
      	update
      </property>
      
      <property name="show_sql">
      	true
      </property>
      
      <mapping class="com.tatvasoft.volunteer.model.Users" />
      <mapping class="com.tatvasoft.volunteer.model.Admins" />
      <mapping class="com.tatvasoft.volunteer.model.City" />
      <mapping class="com.tatvasoft.volunteer.model.Country" />
      <mapping class="com.tatvasoft.volunteer.model.Banner" />
      <mapping class="com.tatvasoft.volunteer.model.CMS_Page" />
      <mapping class="com.tatvasoft.volunteer.model.Mission_Theme" />
      <mapping class="com.tatvasoft.volunteer.model.Skill" />
      <mapping class="com.tatvasoft.volunteer.model.User_Skill" />
      <mapping class="com.tatvasoft.volunteer.model.Mission" />
      <mapping class="com.tatvasoft.volunteer.model.Comment" />
      <mapping class="com.tatvasoft.volunteer.model.Favourite_Mission" />
      <mapping class="com.tatvasoft.volunteer.model.Goal_Mission" />
      <mapping class="com.tatvasoft.volunteer.model.Mission_Application" />
      <mapping class="com.tatvasoft.volunteer.model.Mission_Document" />
      <mapping class="com.tatvasoft.volunteer.model.Mission_Invite" />
      <mapping class="com.tatvasoft.volunteer.model.Mission_Media" />
      <mapping class="com.tatvasoft.volunteer.model.Mission_Rating" />
      <mapping class="com.tatvasoft.volunteer.model.Mission_Skill" />
      <mapping class="com.tatvasoft.volunteer.model.Story" />
      <mapping class="com.tatvasoft.volunteer.model.Story_Invite" />
      <mapping class="com.tatvasoft.volunteer.model.Story_Media" />
      <mapping class="com.tatvasoft.volunteer.model.Timesheet" />
      
   </session-factory>
</hibernate-configuration>